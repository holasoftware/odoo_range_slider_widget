<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="InputRangeWidget" owl="1">
        <div class="o_float_slider d-flex">
            <input
                type="range"
                class="form-range flex-grow-1 cursor-pointer"
                t-att-id="props.id"
                t-att-min="props.min"
                t-att-max="props.max"
                t-att-step="props.step"
                t-att-tabindex="props.tabindex"
                t-att-autofocus="props.autofocus"
                t-model.numeric="props.value"
                t-ref="rangeInput"
                t-on-change="(e)=>this.onChange(e)"
                t-on-input="(e)=>this.onInput(e)"
                style="max-width: 250px"
            />
            <span
                class="o_float_slider_box_value ms-2 d-inline-block text-center px-2 py-0 rounded-2"
                t-esc="props.value"
                style="background-color: darkslateblue; color: white;"
                t-ref="rangeInputBoxValue"
            />
        </div>
    </t>
</templates>
